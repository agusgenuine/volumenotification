<resources>

    <style name="style_app_theme_light" parent="@style/Theme.AppCompat.Light.DarkActionBar"/>

    <style name="style_app_theme_dark" parent="@style/Theme.AppCompat"/>

    <style name="style_theme_material">
        <item name="android:colorBackground">@color/theme_material_background_color</item>
        <item name="android:colorForeground">@color/theme_material_icon_color</item>
    </style>

    <style name="style_theme_material_light">
        <item name="android:colorBackground">@color/theme_material_light_background_color</item>
        <item name="android:colorForeground">@color/theme_material_light_icon_color</item>
    </style>

    <style name="style_theme_material_blue_grey">
        <item name="android:colorBackground">@color/theme_material_blue_grey_background_color</item>
        <item name="android:colorForeground">@color/theme_material_blue_grey_icon_color</item>
    </style>

    <style name="style_theme_holo">
        <item name="android:colorBackground">@color/theme_holo_background_color</item>
        <item name="android:colorForeground">@color/theme_holo_icon_color</item>
    </style>

    <style name="style_theme_holo_light">
        <item name="android:colorBackground">@color/theme_holo_light_background_color</item>
        <item name="android:colorForeground">@color/theme_holo_light_icon_color</item>
    </style>

    <style name="style_image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="style_image_button_compat" parent="@style/style_image_button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="style_dialog_viewport">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@drawable/dialog_divider_vertical</item>
        <item name="android:gravity">fill</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">?dialogPreferredPadding</item>
        <item name="android:paddingRight">?dialogPreferredPadding</item>
        <item name="android:paddingTop">?dialogPreferredPadding</item>
        <item name="android:paddingBottom">?dialogPreferredPadding</item>
        <item name="android:showDividers">middle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="style_dialog_with_footer" parent="@style/style_dialog">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="style_dialog_widget">
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="style_dialog_widget_horizontal" parent="@style/style_dialog_widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_dialog_widget_text_inline" parent="@style/style_dialog_widget_vertical">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="style_dialog_widget_vertical" parent="@style/style_dialog_widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_dialog_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_dialog_row_vertical" parent="@style/style_dialog_row">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_dialog_row_horizontal" parent="@style/style_dialog_row">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_dialog_row_horizontal_with_padding" parent="@style/style_dialog_row">
        <item name="android:orientation">horizontal</item>
        <item name="android:divider">@drawable/dialog_divider_horizontal</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="style_secondary_text">
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>